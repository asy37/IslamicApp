{
  "expo": {
    "name": "IslamicApp",
    "slug": "islamic-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D5016"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.islamicapp.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "processing",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "Namaz vakitlerini doğru hesaplamak için konumunuza ihtiyacımız var.",
        "NSLocationAlwaysUsageDescription": "Namaz vakitlerini doğru hesaplamak için konumunuza ihtiyacımız var.",
        "UILaunchScreen": {
          "backgroundColor": "#2D5016"
        }
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D5016"
      },
      "package": "com.islamicapp.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2D5016",
          "sounds": [
            "./assets/sounds/adhan.mp3"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Namaz vakitlerini doğru hesaplamak için konumunuza ihtiyacımız var."
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Amiri-Regular.ttf",
            "./assets/fonts/Amiri-Bold.ttf",
            "./assets/fonts/ScheherazadeNew-Regular.ttf",
            "./assets/fonts/ScheherazadeNew-Bold.ttf"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "scheme": "islamicapp"
  }
}

